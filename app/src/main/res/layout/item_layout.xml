<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
              android:paddingBottom="5dp" android:paddingTop="5dp" android:paddingLeft="15dp"
              android:paddingRight="15dp">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/preview" android:layout_gravity="left"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_vertical" android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/fileName" android:layout_gravity="top|left|center_vertical" android:paddingLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/lastMod" android:layout_gravity="bottom|center_horizontal|right"
                android:textSize="8dp" android:gravity="bottom" android:paddingLeft="10dp"/>
    </LinearLayout>
</LinearLayout>